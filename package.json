{
  "name": "markink",
  "displayName": "MarkInk",
  "description": "Markdown productivity toolkit - paste images, rename, outline navigation and more",
  "version": "1.0.0",
  "publisher": "audichuang",
  "author": {
    "name": "audichuang"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/audichuang/vscode-markdown-image.git"
  },
  "homepage": "https://github.com/audichuang/vscode-markdown-image#readme",
  "bugs": {
    "url": "https://github.com/audichuang/vscode-markdown-image/issues"
  },
  "icon": "res/icon.png",
  "galleryBanner": {
    "color": "#252526",
    "theme": "dark"
  },
  "keywords": [
    "markdown",
    "image",
    "paste",
    "outline",
    "documentation",
    "productivity",
    "table",
    "toc"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "Image paste requires file system access"
    }
  },
  "contributes": {
    "configuration": {
      "title": "MarkInk",
      "properties": {
        "markink.imagePath": {
          "type": "string",
          "default": "${currentFileDir}",
          "markdownDescription": "The destination to save image file. Supported variables: `${currentFileDir}`, `${projectRoot}`, `${currentFileName}`, `${currentFileNameWithoutExt}`",
          "order": 1
        },
        "markink.imageBasePath": {
          "type": "string",
          "default": "${currentFileDir}",
          "markdownDescription": "The base path for calculating relative image URLs. Leave empty for absolute paths.",
          "order": 2
        },
        "markink.defaultImageName": {
          "type": "string",
          "default": "YYYY-MM-DD-HH-mm-ss",
          "markdownDescription": "Default image filename format ([dayjs format](https://day.js.org/docs/en/display/format))",
          "order": 3
        },
        "markink.forceUnixStyleSeparator": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Force Unix-style path separators (`/`) in image paths.",
          "order": 4
        },
        "markink.imagePrefix": {
          "type": "string",
          "default": "",
          "markdownDescription": "String to prepend to the image path.",
          "order": 5
        },
        "markink.imageSuffix": {
          "type": "string",
          "default": "",
          "markdownDescription": "String to append to the image path.",
          "order": 6
        },
        "markink.imageNamePrefix": {
          "type": "string",
          "default": "",
          "markdownDescription": "String to prepend to the image filename.",
          "order": 7
        },
        "markink.imageNameSuffix": {
          "type": "string",
          "default": "",
          "markdownDescription": "String to append to the image filename.",
          "order": 8
        },
        "markink.encodePath": {
          "type": "string",
          "enum": [
            "none",
            "urlEncode",
            "urlEncodeSpace"
          ],
          "default": "urlEncodeSpace",
          "markdownDescription": "How to encode the image path: `none`, `urlEncode`, or `urlEncodeSpace`",
          "order": 9
        },
        "markink.insertPattern": {
          "type": "string",
          "default": "${imageSyntaxPrefix}${imageFilePath}${imageSyntaxSuffix}",
          "markdownDescription": "Pattern for inserting image reference into document.",
          "order": 10
        },
        "markink.showFilePathConfirmInputBox": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show input box to confirm/modify file path before saving.",
          "order": 11
        },
        "markink.filePathConfirmInputBoxMode": {
          "type": "string",
          "enum": [
            "fullPath",
            "onlyName"
          ],
          "default": "fullPath",
          "markdownDescription": "Mode for file path confirmation: `fullPath` or `onlyName`",
          "order": 12
        }
      }
    },
    "commands": [
      {
        "command": "markink.pasteImage",
        "title": "Paste Image",
        "category": "MarkInk",
        "icon": "$(file-media)"
      },
      {
        "command": "markink.renameImage",
        "title": "Rename Image at Cursor",
        "category": "MarkInk",
        "icon": "$(edit)"
      },
      {
        "command": "markink.configure",
        "title": "Configure Settings",
        "category": "MarkInk",
        "icon": "$(gear)"
      },
      {
        "command": "markink.showSettings",
        "title": "Show Current Settings",
        "category": "MarkInk",
        "icon": "$(info)"
      },
      {
        "command": "markink.refreshOutline",
        "title": "Refresh Outline",
        "category": "MarkInk",
        "icon": "$(refresh)"
      },
      {
        "command": "markink.insertToc",
        "title": "Insert Table of Contents",
        "category": "MarkInk",
        "icon": "$(list-tree)"
      },
      {
        "command": "markink.updateToc",
        "title": "Update Table of Contents",
        "category": "MarkInk",
        "icon": "$(sync)"
      },
      {
        "command": "markink.formatTable",
        "title": "Format Table",
        "category": "MarkInk",
        "icon": "$(table)"
      },
      {
        "command": "markink.insertTable",
        "title": "Insert Table",
        "category": "MarkInk",
        "icon": "$(add)"
      },
      {
        "command": "markink.wordToMarkdown",
        "title": "Word â†’ Markdown",
        "category": "MarkInk",
        "icon": "$(file-symlink-file)"
      },
      {
        "command": "markink.checkImageLinks",
        "title": "Check Image Links",
        "category": "MarkInk",
        "icon": "$(search)"
      },
      {
        "command": "markink.exportMarkdown",
        "title": "Export Markdown to HTML/PDF",
        "category": "MarkInk",
        "icon": "$(export)"
      },
      {
        "command": "markink.gotoHeading",
        "title": "Go to Heading",
        "category": "MarkInk"
      },
      {
        "command": "markink.gotoImage",
        "title": "Go to Image",
        "category": "MarkInk"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "markink",
          "title": "MarkInk",
          "icon": "res/icon.svg"
        }
      ]
    },
    "views": {
      "markink": [
        {
          "id": "markinkOutline",
          "name": "Document Outline",
          "when": "resourceLangId == markdown"
        },
        {
          "id": "markinkImages",
          "name": "Images",
          "when": "resourceLangId == markdown"
        },
        {
          "id": "markinkTools",
          "name": "Tools"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "markink.refreshOutline",
          "when": "view == markinkOutline",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "markink.exportMarkdown",
          "when": "resourceLangId == markdown",
          "group": "markink@1"
        }
      ],
      "editor/context": [
        {
          "command": "markink.pasteImage",
          "when": "editorTextFocus && resourceLangId == markdown",
          "group": "markink@1"
        },
        {
          "command": "markink.renameImage",
          "when": "editorTextFocus && resourceLangId == markdown",
          "group": "markink@2"
        },
        {
          "command": "markink.formatTable",
          "when": "editorTextFocus && resourceLangId == markdown",
          "group": "markink@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "markink.pasteImage",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v",
        "when": "editorTextFocus"
      },
      {
        "command": "markink.renameImage",
        "key": "ctrl+shift+f2",
        "mac": "cmd+shift+f2",
        "when": "editorTextFocus && editorLangId =~ /markdown|asciidoc/"
      },
      {
        "command": "markink.formatTable",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "markink.insertToc",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "node esbuild.js",
    "build:watch": "node esbuild.js --watch",
    "package": "npm run build && vsce package",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@types/html-docx-js": "^0.3.4",
    "@types/html-to-docx": "^1.8.0",
    "@types/markdown-it": "^14.1.2",
    "adm-zip": "^0.5.16",
    "dayjs": "^1.11.10",
    "html-docx-js": "^0.3.1",
    "html-to-docx": "^1.8.0",
    "jsdom": "^27.4.0",
    "mammoth": "^1.11.0",
    "markdown-it": "^14.1.0",
    "md-to-docx": "^1.6.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "upath": "^2.0.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/glob": "^8.1.0",
    "@types/jsdom": "^27.0.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@types/turndown": "^5.0.6",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.56.0",
    "glob": "^13.0.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  }
}
